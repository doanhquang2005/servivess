@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
    ViewBag.MenuPart = LayoutMenu.Account;
    ViewBag.MenuItem = 2;
    var menuLayout = LayoutMenu.Get(ViewBag.MenuPart);
}
<n-navs icon="@menuLayout.Icon" label-1="@menuLayout.Name" path-1="@menuLayout.Path" active="Đổi mật khẩu"></n-navs>
<n-form action="/account/changepassword">
    @Html.AntiForgeryToken()
    <n-input for="OldPassword" type="password" icon="@Icons.Password"></n-input>
    <n-input for="NewPassword" type="password" icon="@Icons.Password"></n-input>
    <n-input for="ConfirmPassword" type="password" icon="@Icons.Password"></n-input>
</n-form>

@section Scripts {
    <script>
        function eValidate() {
            if ($("#NewPassword").val() != $("#ConfirmPassword").val()) {
                toastr.warning('Nhập lại mật khẩu không đúng');
                return false;
            }
        }
        $.validate(eValidate);
    </script>
}