@{
    bool isPart = false;
    int role = 1;
    if(User.IsInRole(Roles.Manager))
        role = 11;
    else if(User.IsInRole(Roles.Admin))
        role = 99;
}
<!--Double navigation-->
<header>
    <!-- Sidebar navigation -->
    <div id="slide-out" class="side-nav fixed wide sn-bg-1">
        <ul class="custom-scrollbar">
            <!-- Side navigation links -->
            <li>
                <ul class="collapsible collapsible-accordion mt-0">
                    <li>
                        <div class="logo-wrapper waves-light">
                            <div class="logo-wrapper sn-ad-avatar-wrapper p-0">
                                <img class="img-fluid rounded-circle avatar-account" src="~/images/vntt/avatar.jpg">
                                <div class="rgba-stylish-strong">
                                    <p class="user white-text text-shortcut">
                                        @User.Identity.Name<br />
                                        @User.GetSpecificClaim("http://schemas.xmlsoap.org/ws/2005/05/identity/claims/emailaddress")
                                    </p>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="md-form active-pink active-pink-2 mb-2 mt-0">
                            <input class="form-control pl-3" type="text" placeholder=" Tìm kiếm" aria-label="Search">
                        </div>
                    </li>
                    @if(role > 10) {

                        <li>
                            @{isPart = ViewBag.MenuPart == LayoutMenu.Statistical;}
                            <a class="collapsible-header waves-effect arrow-r @(isPart ? "active" : "")">
                                <i class="sv-slim-icon far fa-hand-point-right"></i>
                                Thống kê
                                <i class="fas fa-angle-down rotate-icon"></i>
                            </a>
                            <div class="collapsible-body">
                                <ul>
                                    <li class="@(isPart && ViewBag.MenuItem == 1 ? "active" : "")">
                                        <a href="#" class="waves-effect">
                                            <span class="sv-slim"> TTC </span>
                                            <span class="sv-normal">Chưa tính được Cước</span>
                                        </a>
                                    </li>
                                    <li class="@(isPart && ViewBag.MenuItem == 2 ? "active" : "")">
                                        <a href="#" class="waves-effect">
                                            <span class="sv-slim"> TTC </span>
                                            <span class="sv-normal">Chênh lệch giá cước</span>
                                        </a>
                                    </li>
                                    <li class="@(isPart && ViewBag.MenuItem == 3 ? "active" : "")">
                                        <a href="#" class="waves-effect">
                                            <span class="sv-slim"> TTC </span>
                                            <span class="sv-normal">Các cảnh báo cước</span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    }
                    <li>
                        @{isPart = ViewBag.MenuPart == LayoutMenu.Billing;}
                        <a class="collapsible-header waves-effect arrow-r @(isPart ? "active" : "")">
                            <i class="sv-slim-icon far fa-hand-point-right"></i>
                            Quản lý giá cước
                            <i class="fas fa-angle-down rotate-icon"></i>
                        </a>
                        <div class="collapsible-body">
                            <ul>
                                <li class="@(isPart && ViewBag.MenuItem == 1 ? "active" : "")">
                                    <a href="#" class="waves-effect">
                                        <span class="sv-slim"> TTC </span>
                                        <span class="sv-normal">Danh sách gói cước</span>
                                    </a>
                                </li>
